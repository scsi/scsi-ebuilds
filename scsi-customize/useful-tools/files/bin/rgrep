#find $3 -name "*" -exec grep $1 $2 {} \; 2> /dev/null

if [ $# = 1 ]
then
   find . -name "*" -exec grep -l $1 {} \; 2> /dev/null
fi

if [ $# = 2 ]
then
   find . -name "*" -exec grep $1 $2 {} \; 2> /dev/null
fi
