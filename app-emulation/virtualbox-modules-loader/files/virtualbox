start() {
	ebegin "Loading virtualbox modules"
	for m in vboxdrv vboxnetadp vboxnetflt;do
		einfo "load $m."
		modprobe $m
	done
	eend $? "Failed to load virtualbox modules"
}

stop() {
	ebegin "UnLoading virtualbox modules"
	for m in vboxnetflt vboxnetadp vboxdrv;do
		einfo "unload $m."
		rmmod $m
	done
	eend $? "Failed to unload virtualbox modules"
}
